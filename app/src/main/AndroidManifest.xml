<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aleisamo.github.com.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_baking"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_baking"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainBaking">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipesDetail"
            android:label="@string/detail_recipes">
        </activity>
        <activity android:name=".Description"
            android:label="Description">
        </activity>
        <receiver android:name=".widget.BakingWidgetsProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/baking_widgets_provider_info" />
        </receiver>

        <activity android:name=".widget.BakingWidgetsProviderConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <service android:name=".widget.BakingRecipeService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>