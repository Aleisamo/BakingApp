<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- display & contains widget_list_ingredients card-->
    <android.support.v7.widget.CardView
        android:id="@+id/recipes_cardView"
        style="@style/Recipe_CardView"
        android:layout_height="@dimen/CardViewRecipe_height">

        <TextView
            android:id="@+id/recipe_servings"
            style="@style/Recipe_cardText"
            android:layout_gravity="bottom"
            android:textSize="@dimen/RecipeSmallSize" />

        <ImageView
            android:id="@+id/recipe_image"
            style="@style/Recipe_cardImage" />

        <TextView
            android:id="@+id/recipe_card"
            style="@style/Recipe_cardText"
            android:gravity="center_horizontal"
            android:textSize="@dimen/RecipeLargeSize" />

    </android.support.v7.widget.CardView>
</LinearLayout>


