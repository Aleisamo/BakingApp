<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_of_recipes"
        style="@style/TextStyle"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/list_of_ingredients"
        android:layout_toEndOf="@+id/list_of_ingredients"
        android:layout_marginStart="43dp" />

    <ImageView
        android:id="@+id/appwidget_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/confectionery"
        android:layout_marginEnd="55dp"
        android:layout_below="@+id/list_of_ingredients"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

    <ListView
        android:id="@+id/list_of_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        style="@style/TextStyle"
        android:layout_alignStart="@+id/widget_title"
        android:layout_below="@+id/widget_title" />
    <ListView
        android:id="@+id/list_of_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/TextStyle" />


</RelativeLayout>