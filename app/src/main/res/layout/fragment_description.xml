<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/exo_layout_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/imageCupcake"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <View
            android:id="@+id/viewlineTop"
            android:paddingTop="@dimen/fragment_text_padding_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_height"
            android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description here"
                style="@style/TextStyle"
                android:layout_marginLeft="@dimen/fragment_text_margin_left"
                android:layout_marginTop="@dimen/fragment_text_margin_top"/>
        <View
            android:id="@+id/viewlineBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/View_height"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


    </LinearLayout>


