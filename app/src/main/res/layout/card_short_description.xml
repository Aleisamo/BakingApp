<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!-- display & contains recipe card-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_short_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/colorBackground"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/text_short_description"
            android:layout_width="@dimen/CardTextshortDescription"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/CardTextshortmargin"
            android:textAppearance="@style/CardViewTextStyle" />
    </android.support.v7.widget.CardView>
</LinearLayout>


