<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!-- display & contains widget_list_ingredients card-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_short_description"
        style="@style/Recipe_CardView"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_short_description"
            android:layout_width="@dimen/CardTextshortDescription"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:layout_margin="@dimen/CardTextshortmargin"
            style="@style/SelectableItemBackground"
            android:textAppearance="@style/CardViewTextStyle" />
    </android.support.v7.widget.CardView>
</LinearLayout>


